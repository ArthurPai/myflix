%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6') do |f|
        %header
          %h1 Register
        = hidden_field_tag :invitation_token, @invitation_token
        = f.alert_message 'Please fix the errors below.'
        = f.email_field :email, label: 'Email Address'
        = f.password_field :password
        = f.text_field :full_name, label: 'Full Name'
        = f.form_group do
          %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_PUBLISHABLE_KEY']}" data-name="MyFlix" data-description="a month ($9.99)" data-amount="999")
