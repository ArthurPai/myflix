%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: invite_path, html: { class: 'invite' } do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        .row
          .col-sm-4
            = f.text_field :name, value: params[:name], label: "Friend's Name"
            = f.email_field :email, value: params[:email], label: "Friend's Email Address"
        .row
          .col-sm-6
            = f.text_area :message, value: params[:message], label: 'Invitation Message', rows: 6, placeholder: 'Please join this really cool site!'
        = f.form_group html: { class: 'action' } do
          = f.submit 'Send Invitation'
